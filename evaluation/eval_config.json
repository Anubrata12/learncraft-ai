{
  "criteria": {
    "VideoLinkPresent_score": 1.0,
    "AnswerRelevance_score": {
      "threshold": 0.8,
      "model": "gemini-2.5-flash"
    },
    "ExerciseFormatCheck_score": 1.0
  },
  "custom_metrics": [
    {
      "name": "VideoLinkPresent",
      "metric": "contains_substring",
      "config": {
        "substring": ".mp4"
      }
    },
    {
      "name": "AnswerRelevance",
      "metric": "llm_metric",
      "config": {
        "metric_name": "answer_relevance",
        "model": "gemini-2.5-flash"
      }
    },
    {
      "name": "ExerciseFormatCheck",
      "metric": "regex_match",
      "config": {
        "regex": "EXERCISE_OUTPUT:\\s*\\d+\\."
      }
    }
  ]
}